{
  "name": "zeami-term",
  "version": "0.1.2",
  "description": "Smart terminal emulator for Claude Code with Zeami integration",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dev:minimal": "electron minimal-main.js",
    "patch:xterm": "node scripts/apply-xterm-patches.js",
    "build:xterm": "node scripts/build-xterm.js",
    "build": "npm run build:xterm && electron-builder",
    "build:mac": "npm run build:xterm && electron-builder --mac",
    "build:mac:signed": "npm run build:mac && ./scripts/sign-app.sh",
    "build:win": "npm run build:xterm && electron-builder --win",
    "build:linux": "npm run build:xterm && electron-builder --linux",
    "dist": "npm run build",
    "publish": "electron-builder --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --win --publish always",
    "publish:linux": "electron-builder --linux --publish always",
    "rebuild": "electron-rebuild -f -w node-pty",
    "test": "jest",
    "test:smoke": "electron test/smoke-test.js",
    "test:integration": "node test/integration-test.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:smoke && npm run test:e2e",
    "test:direct": "node test/terminal.test.js",
    "test:pty": "node test-pty.js",
    "lint": "eslint src --ext .js,.jsx",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "terminal",
    "electron",
    "zeami",
    "claude-code"
  ],
  "author": "Zeami Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hiranotomo/zeami-term.git"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@playwright/test": "^1.53.1",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.25.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-webgl": "^0.18.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "node-pty": "^0.10.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  }
}
