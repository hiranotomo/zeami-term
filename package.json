{
  "name": "zeami-term",
  "version": "0.1.2",
  "description": "Smart terminal emulator for Claude Code with Zeami integration",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dev:minimal": "electron minimal-main.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:signed": "npm run build:mac && ./scripts/sign-app.sh",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "publish": "electron-builder --publish always",
    "publish:mac": "electron-builder --mac --publish always",
    "publish:win": "electron-builder --win --publish always",
    "publish:linux": "electron-builder --linux --publish always",
    "rebuild": "electron-rebuild -f -w node-pty",
    "test": "jest",
    "test:direct": "node test/terminal.test.js",
    "test:pty": "node test-pty.js",
    "lint": "eslint src --ext .js,.jsx",
    "type-check": "echo 'TypeScript not yet configured'"
  },
  "keywords": [
    "terminal",
    "electron",
    "zeami",
    "claude-code"
  ],
  "author": "Zeami Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hiranotomo/zeami-term.git"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-webgl": "^0.18.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "node-pty": "^0.10.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0"
  }
}
